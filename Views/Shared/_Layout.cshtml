<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - q2_q3_s5_loyola</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/q2_q3_s5_loyola.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        @{
            var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
            var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        }
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
            <div class="container-fluid">
                <a class="navbar-brand me-4 fw-bold" href="@Url.Action("Index", "Home")">C# Portfolio - ITEWT</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto d-flex gap-3">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new
                                {
                                    @class = "nav-link px-3" + ((currentAction == "Index" && currentController == "Home") ? " active" : "")
                                })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Projects", "Portfolio", "Home", null, new
                                {
                                    @class = "nav-link px-3" + ((currentAction == "Portfolio" && currentController == "Home") ? " active" : "")
                                })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Skills", "Skills", "Home", null, new
                                {
                                    @class = "nav-link px-3" + ((currentAction == "Skills" && currentController == "Home") ? " active" : "")
                                })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    :root {
        --primary-color: #0d6efd;
        --accent-color: #6c757d;
        --bg-color: #f8f9fa;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Segoe UI', sans-serif;
    }

    h1, h2, h3 {
        color: var(--primary-color);
    }

    .highlight {
        color: var(--accent-color);
        font-weight: bold;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
    }

    .section {
        padding: 3rem 0;
    }

    .card {
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>
