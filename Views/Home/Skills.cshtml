@{
    ViewData["Title"] = "Skills";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .fade-in {
        opacity: 0;
        animation: fadeInUp 1s ease-in-out forwards;
    }

    .fade-in-delay-1 {
        animation-delay: 0.3s;
    }

    .fade-in-delay-2 {
        animation-delay: 0.6s;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="animate__animated animate__fadeInDown animate__delay-1s display-4 fw-bold text-primary">My Skills</h1>
        <p class="lead text-muted">What I bring to the table — technical expertise and team-driven values</p>
    </div>

    <div class="row g-4 justify-content-center" style="max-width: 900px; margin: 0 auto;">
        <div class="col-md-6 fade-in fade-in-delay-1">
            <div class="card shadow border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-cpu me-2"></i>Technical Skills</h4>
                </div>
                <div class="card-body">
                    <h6>PHP <span class="float-end">50%</span></h6>
                    <div class="progress mb-3"><div class="progress-bar bg-success" style="width: 50%"></div></div>

                    <h6>JavaScript <span class="float-end">65%</span></h6>
                    <div class="progress mb-3"><div class="progress-bar bg-info" style="width: 65%"></div></div>

                    <h6>C# <span class="float-end">25%</span></h6>
                    <div class="progress mb-3"><div class="progress-bar bg-warning" style="width: 25%"></div></div>

                    <h6>React.js <span class="float-end">80%</span></h6>
                    <div class="progress mb-3"><div class="progress-bar bg-danger" style="width: 80%"></div></div>

                    <h6>MySQL / MSSQL <span class="float-end">85%</span></h6>
                    <div class="progress mb-3"><div class="progress-bar bg-secondary" style="width: 85%"></div></div>

                    <h6>Tools</h6>
                    <span class="badge bg-dark me-1">Git</span>
                    <span class="badge bg-dark me-1">Postman</span>
                    <span class="badge bg-dark me-1">VS Code</span>
                    <span class="badge bg-dark">Visual Studio</span>
                </div>
            </div>
        </div>

        <div class="col-md-6 fade-in fade-in-delay-2">
            <div class="card shadow border-0 h-100">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i>Soft Skills</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-outline-primary px-3 py-2 rounded-pill" data-bs-toggle="collapse" data-bs-target="#descTeam" aria-expanded="false" aria-controls="descTeam">
                            <i class="bi bi-people"></i> Team Collaboration
                        </button>
                        <button class="btn btn-outline-success px-3 py-2 rounded-pill" data-bs-toggle="collapse" data-bs-target="#descTime" aria-expanded="false" aria-controls="descTime">
                            <i class="bi bi-clock-history"></i> Time Management
                        </button>
                        <button class="btn btn-outline-warning text-dark px-3 py-2 rounded-pill" data-bs-toggle="collapse" data-bs-target="#descProblem" aria-expanded="false" aria-controls="descProblem">
                            <i class="bi bi-tools"></i> Problem Solving
                        </button>
                        <button class="btn btn-outline-info text-dark px-3 py-2 rounded-pill" data-bs-toggle="collapse" data-bs-target="#descComm" aria-expanded="false" aria-controls="descComm">
                            <i class="bi bi-chat-dots"></i> Communication
                        </button>
                    </div>

                    <div class="mt-3" id="softSkillDescriptions">
                        <div class="collapse" id="descTeam" data-bs-parent="#softSkillDescriptions">
                            <div class="alert alert-primary mt-2">I enjoy working with others to achieve shared goals and contribute positively to group dynamics.</div>
                        </div>
                        <div class="collapse" id="descTime" data-bs-parent="#softSkillDescriptions">
                            <div class="alert alert-success mt-2">I prioritize tasks effectively and meet deadlines consistently under pressure.</div>
                        </div>
                        <div class="collapse" id="descProblem" data-bs-parent="#softSkillDescriptions">
                            <div class="alert alert-warning text-dark mt-2">I analyze issues logically and implement smart, efficient solutions.</div>
                        </div>
                        <div class="collapse" id="descComm" data-bs-parent="#softSkillDescriptions">
                            <div class="alert alert-info text-dark mt-2">I communicate clearly and listen actively, fostering understanding within teams.</div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
